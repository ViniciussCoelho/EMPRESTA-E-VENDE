%header
  %nav
    .logo-nav
      - unless root_path == request.path
        = link_to image_tag("arrow-left.svg", class: "arrow"), @back_path || root_path
      = link_to image_tag("logo.svg", class: "logo"), root_path
    .user-nav
      = button_to image_tag("exit.svg", class: 'logout'), destroy_user_session_path, method: :delete
      = link_to image_tag(resource_image(current_user), class: 'pfp'), edit_registration_path(current_user)
