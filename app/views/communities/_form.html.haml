= form_with(model: community) do |form|
  - if community.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(community.errors.count, "error")
        prohibited this community from being saved:
      %ul
        - community.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :name, style: "display: block"
    = form.text_area :name
  %div
    = form.label :image, style: "display: block"
    = form.file_field :image
  %div
    = form.submit
