= form_with(model: [@community, post]) do |form|
  - if post.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - post.errors.each do |error|
          %li= error.full_message
  %div
    .field
      = form.label :title
      %br/
      = form.text_area :title, class: "input"
    .field
      = form.label :description
      %br/
      = form.text_area :description, class: "input"
    .field
      = form.label :image
      %br/
      = form.file_field :image, class: "input"
    .actions
      = form.submit "Enviar", class: "button comment-button"