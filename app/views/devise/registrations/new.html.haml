.login-form
  .login
    = image_tag "logo.svg", class: "logo"
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        = f.label "Nome"
        %br/
        = f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "input"
      .field
        = f.label "Sobrenome"
        %br/
        = f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "input"
      .field
        = f.label "E-mail"
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "input"
      .field
        = f.label "Senha"
        - if @minimum_password_length
          %em
            (m√≠nimo #{@minimum_password_length} caracteres)
        %br/
        = f.password_field :password, autocomplete: "new-password", class: "input"
      .field
        = f.label "Confirme a senha"
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password", class: "input"
      .actions
        = f.submit "Criar conta", class: "button button-login"
