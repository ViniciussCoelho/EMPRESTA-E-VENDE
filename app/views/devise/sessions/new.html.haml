.login-form
  .login
    = image_tag "logo.svg", class: "logo"
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        = f.label "E-mail"
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "input"
      .field
        = f.label "Senha"
        %br/
        = f.password_field :password, autocomplete: "current-password", class: "input"
      .actions
        = f.submit "Entrar", class: "button button-login"
    = link_to "Criar conta", new_registration_path(resource_name), class: "register"
